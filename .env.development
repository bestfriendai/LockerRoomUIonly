# Development Environment Variables (Firebase Emulators)
# This file configures the app to use Firebase emulators for local development

# Firebase Configuration (Development - uses emulators)
EXPO_PUBLIC_FIREBASE_API_KEY=demo-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=demo-project
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Emulator Configuration
EXPO_PUBLIC_USE_FIREBASE_EMULATORS=true
EXPO_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099
EXPO_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
EXPO_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199

# Environment
NODE_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=LockerRoom Talk (Dev)
EXPO_PUBLIC_APP_VERSION=1.0.0-dev
EXPO_PUBLIC_API_URL=http://localhost:3000

# Feature Flags (Development)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASHLYTICS=false
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
EXPO_PUBLIC_ENABLE_CONTENT_MODERATION=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_APP_CHECK=false
EXPO_PUBLIC_ENABLE_SECURITY_MONITORING=false

# Debugging (enabled in development)
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_BUNDLE_ANALYZER=true
