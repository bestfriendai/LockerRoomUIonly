# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values

# Firebase Configuration (Production)
EXPO_PUBLIC_FIREBASE_API_KEY=your_production_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-production-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_production_app_id

# reCAPTCHA (for App Check)
EXPO_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Environment
NODE_ENV=production

# App Configuration
EXPO_PUBLIC_APP_NAME=LockerRoom Talk
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_API_URL=https://your-api-domain.com

# Analytics (Optional)
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Social Login (Optional)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASHLYTICS=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Content Moderation
EXPO_PUBLIC_ENABLE_CONTENT_MODERATION=true
EXPO_PUBLIC_MODERATION_API_URL=https://your-moderation-api.com

# Push Notifications
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Security
EXPO_PUBLIC_ENABLE_APP_CHECK=true
EXPO_PUBLIC_ENABLE_SECURITY_MONITORING=true

# Performance
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_BUNDLE_ANALYZER=false

# Debugging (should be false in production)
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_FLIPPER=false
